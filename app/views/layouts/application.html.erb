    Quizzical.images = {
      learningtree: "<%= image_url('learningtree.jpg') %>",
      exit: "<%= image_url('exit.svg') %>",
      usericon: "<%= image_url('usericon.svg') %>",
      enter: "<%= image_url('enter.svg') %>",
      delete: "<%= image_url('delete.svg') %>",
      add: "<%= image_url('add.svg') %>",
      search: "<%= image_url('search.svg') %>",
      play_audio: "<%= image_url('play_audio.svg') %>",
      audio_upload: "<%= image_url('audio_upload.svg') %>",
      no_audio: "<%= image_url('no_audio.svg') %>"
    }

  </script>

</head>
<body>

<%= yield %>

</body>
</html>
